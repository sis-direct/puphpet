<input type="hidden" name="redis[install]" value="0" />

<div class="field-container">
    <div class="form-group">
        <label class="col-xs-12 radio-tile">
            <input type="checkbox" name="redis[install]" value="1"
                   class="invisible toggle-on-select"
                   {% if redis.install %}checked{% endif %}
                   data-vis-toggle-target="#redis-container" />
            <span class="content">
                <span class="header large">
                    <i class="icon"></i>
                    <span class="title">Install Redis</span>
                </span>
                <span class="footer">
                    An open source, advanced key-value store.
                </span>
            </span>
        </label>

        <div class="clearfix"></div>
    </div>

    <div class="clearfix"></div>

    <div id="redis-container" class="{% if not redis.install %}hidden{% endif %}">
        <div class="form-group col-xs-12">
            <label for="redis-settings-port">Listen Port</label>
            <input type="text" id="redis-settings-port"
                   name="redis[settings][port]"
                   placeholder="5673" class="form-control"
                   value="{{ redis.settings.port }}" />
        </div>

        <div class="clearfix"></div>
    </div>

    <div class="clearfix"></div>

    <nav>
        <ul class="pager">
            <li class="previous">
                <a href="#mongodb"><span aria-hidden="true">&larr;</span> MongoDB</a></li>
            <li class="next">
                <a href="#sqlite">SQLite <span aria-hidden="true">&rarr;</span></a></li>
        </ul>
    </nav>
</div>
